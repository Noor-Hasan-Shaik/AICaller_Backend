###############################################
# üåê DATABASE CONFIGURATION
###############################################
# Example: postgresql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_caller


###############################################
# ü§ñ GEMINI AI CONFIGURATION
###############################################
# Gemini API key from Google AI Studio
GEMINI_API_KEY=your-gemini-api-key-here
# Gemini model version (e.g., gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash


###############################################
# üìû TWILIO CONFIGURATION
###############################################
# Twilio credentials from your Twilio Console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
# Twilio phone number (E.164 format, e.g., +14155552671)
TWILIO_PHONE_NUMBER=+10000000000


###############################################
# üìÖ GOOGLE CALENDAR API CONFIGURATION
###############################################
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret


###############################################
# ‚öôÔ∏è APPLICATION CONFIGURATION
###############################################
APP_NAME="AI Cold Caller Backend"
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000


###############################################
# üåç CORS CONFIGURATION
###############################################
# Allowed origins for frontend and other clients
# Multiple origins can be listed as a JSON array
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "https://aicaller.aispirelabs.com", "http://aicaller.aispirelabs.com"]


###############################################
# üîê SECURITY CONFIGURATION
